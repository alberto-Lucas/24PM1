<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLogin.MainPage">

    <StackLayout Padding="20" VerticalOptions="StartAndExpand">

        <Frame Padding="20" CornerRadius="0" BackgroundColor="#1e1e1e">
            <Label Text="Olá Mundo!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Frame CornerRadius="10">
            <StackLayout>
                <Label Text="Uusário:"/>
                <Entry Placeholder="usuário" x:Name="txtUsuario"/>
                <Label Text="Senha:"/>
                <Entry Placeholder="senha" x:Name="txtSenha"/>
                <Button x:Name="btnEntrar"
                            Clicked="EntrarClicked"
                            Text="ENTRAR" 
                            BackgroundColor="Gray" 
                            TextColor="White"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
